{
  "$schema": "https://openclaw.io/schemas/skill.json",
  "name": "asus-mesh-wifi-analyzer",
  "version": "1.3.2",
  "displayName": "ASUS Mesh WiFi Analyzer",
  "description": "Comprehensive ASUS Mesh WiFi network analysis and optimization with Home Assistant Zigbee integration",
  "author": "OpenClaw Community",
  "license": "MIT",
  "homepage": "https://github.com/The-Geek-Freaks/openclaw_WIFI_DEBUGGER",
  "repository": {
    "type": "git",
    "url": "https://github.com/The-Geek-Freaks/openclaw_WIFI_DEBUGGER.git"
  },
  "keywords": [
    "asus",
    "mesh",
    "wifi",
    "network",
    "optimization",
    "zigbee",
    "home-assistant",
    "merlin"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0.0",
    "openclaw": ">=2.0.0"
  },
  "capabilities": [
    "network_analysis",
    "device_discovery",
    "signal_optimization",
    "zigbee_coordination",
    "auto_debugging",
    "heatmap_generation"
  ],
  "permissions": [
    "network.ssh",
    "network.scan",
    "homeassistant.read",
    "homeassistant.write",
    "storage.local"
  ],
  "configuration": {
    "asus": {
      "type": "object",
      "required": true,
      "properties": {
        "host": {
          "type": "string",
          "description": "Router IP address",
          "default": "192.168.178.3"
        },
        "sshPort": {
          "type": "number",
          "description": "SSH port",
          "default": 22
        },
        "sshUser": {
          "type": "string",
          "description": "SSH username",
          "default": "admin"
        },
        "sshPassword": {
          "type": "string",
          "description": "SSH password",
          "secret": true
        }
      }
    },
    "homeAssistant": {
      "type": "object",
      "required": false,
      "properties": {
        "host": {
          "type": "string",
          "description": "Home Assistant host"
        },
        "port": {
          "type": "number",
          "default": 8123
        },
        "accessToken": {
          "type": "string",
          "secret": true
        }
      }
    }
  },
  "actions": [
    { "name": "scan_network", "description": "Scan the entire mesh network", "parameters": [] },
    { "name": "get_network_health", "description": "Get network health score", "parameters": [] },
    { "name": "get_device_list", "description": "List all connected devices", "parameters": [
      { "name": "filter", "type": "string", "enum": ["all", "wireless", "wired", "problematic"], "default": "all" }
    ]},
    { "name": "get_device_details", "description": "Get detailed info for a specific device", "parameters": [
      { "name": "macAddress", "type": "string", "required": true }
    ]},
    { "name": "get_device_signal_history", "description": "Get signal history for a device", "parameters": [
      { "name": "macAddress", "type": "string", "required": true },
      { "name": "hours", "type": "number", "default": 24 }
    ]},
    { "name": "get_mesh_nodes", "description": "Get all mesh nodes", "parameters": [] },
    { "name": "get_wifi_settings", "description": "Get current WiFi settings", "parameters": [] },
    { "name": "set_wifi_channel", "description": "Set WiFi channel", "parameters": [
      { "name": "band", "type": "string", "enum": ["2.4GHz", "5GHz"], "required": true },
      { "name": "channel", "type": "number", "required": true }
    ]},
    { "name": "get_problems", "description": "Get detected network problems", "parameters": [
      { "name": "severity", "type": "string", "enum": ["all", "critical", "error", "warning"], "default": "all" }
    ]},
    { "name": "get_optimization_suggestions", "description": "Get optimization suggestions", "parameters": [] },
    { "name": "apply_optimization", "description": "Apply an optimization suggestion", "parameters": [
      { "name": "suggestionId", "type": "string", "required": true },
      { "name": "confirm", "type": "boolean", "required": true }
    ]},
    { "name": "scan_zigbee", "description": "Scan Zigbee network via Home Assistant", "parameters": [] },
    { "name": "get_zigbee_devices", "description": "Get Zigbee devices", "parameters": [] },
    { "name": "get_frequency_conflicts", "description": "Get WiFi/Zigbee frequency conflicts", "parameters": [] },
    { "name": "get_spatial_map", "description": "Get spatial map of devices", "parameters": [] },
    { "name": "set_node_position", "description": "Set position of a mesh node", "parameters": [
      { "name": "nodeId", "type": "string", "required": true },
      { "name": "x", "type": "number", "required": true },
      { "name": "y", "type": "number", "required": true },
      { "name": "z", "type": "number" },
      { "name": "room", "type": "string" }
    ]},
    { "name": "get_connection_stability", "description": "Get connection stability for a device", "parameters": [
      { "name": "macAddress", "type": "string", "required": true },
      { "name": "hours", "type": "number", "default": 24 }
    ]},
    { "name": "restart_wireless", "description": "Restart wireless interfaces", "parameters": [
      { "name": "confirm", "type": "boolean", "required": true }
    ]},
    { "name": "get_channel_scan", "description": "Scan WiFi channels for interference", "parameters": [
      { "name": "band", "type": "string", "enum": ["2.4GHz", "5GHz", "both"], "default": "both" }
    ]},
    { "name": "scan_rogue_iot", "description": "Scan for rogue IoT WiFi networks", "parameters": [] },
    { "name": "get_heatmap", "description": "Generate signal heatmap", "parameters": [
      { "name": "floor", "type": "number", "default": 0 }
    ]},
    { "name": "run_benchmark", "description": "Run network benchmark", "parameters": [] },
    { "name": "sync_mesh_settings", "description": "Sync settings across all mesh nodes", "parameters": [
      { "name": "channel2g", "type": "number" },
      { "name": "channel5g", "type": "number" }
    ]},
    { "name": "analyze_network_topology", "description": "Analyze network topology via SNMP", "parameters": [] },
    { "name": "full_intelligence_scan", "description": "Full network intelligence scan with targets", "parameters": [
      { "name": "targets", "type": "array", "items": { "type": "string", "enum": ["minimize_interference", "maximize_throughput", "balance_coverage", "protect_zigbee", "reduce_neighbor_overlap", "improve_roaming"] } }
    ]},
    { "name": "get_environment_summary", "description": "Get environment summary", "parameters": [] },
    { "name": "get_homeassistant_data", "description": "Get data from Home Assistant", "parameters": [
      { "name": "include", "type": "array", "items": { "type": "string", "enum": ["zigbee", "bluetooth", "snmp", "device_trackers", "router_entities", "all"] } }
    ]},
    { "name": "get_placement_recommendations", "description": "Get node placement recommendations", "parameters": [] },
    { "name": "set_floor_plan", "description": "Set floor plan for visualization", "parameters": [
      { "name": "floor", "type": "number", "required": true },
      { "name": "name", "type": "string", "required": true },
      { "name": "widthMeters", "type": "number", "required": true },
      { "name": "heightMeters", "type": "number", "required": true },
      { "name": "imagePath", "type": "string" },
      { "name": "imageBase64", "type": "string" }
    ]},
    { "name": "get_floor_visualization", "description": "Get floor visualization", "parameters": [
      { "name": "floor", "type": "number", "required": true }
    ]},
    { "name": "get_quick_diagnosis", "description": "Quick network diagnosis", "parameters": [] },
    { "name": "get_switch_status", "description": "Get switch status via SNMP", "parameters": [
      { "name": "host", "type": "string" }
    ]},
    { "name": "get_port_traffic", "description": "Get port traffic stats", "parameters": [
      { "name": "host", "type": "string", "required": true },
      { "name": "port", "type": "number" }
    ]},
    { "name": "get_vlan_info", "description": "Get VLAN information", "parameters": [
      { "name": "host", "type": "string", "required": true }
    ]},
    { "name": "get_poe_status", "description": "Get PoE status", "parameters": [
      { "name": "host", "type": "string", "required": true }
    ]},
    { "name": "set_poe_enabled", "description": "Enable/disable PoE on a port", "parameters": [
      { "name": "host", "type": "string", "required": true },
      { "name": "port", "type": "number", "required": true },
      { "name": "enabled", "type": "boolean", "required": true }
    ]},
    { "name": "get_roaming_analysis", "description": "Analyze device roaming behavior", "parameters": [
      { "name": "macAddress", "type": "string", "required": true }
    ]},
    { "name": "configure_alerts", "description": "Configure alert notifications", "parameters": [
      { "name": "webhookUrl", "type": "string" },
      { "name": "mqttBroker", "type": "string" },
      { "name": "mqttTopic", "type": "string" },
      { "name": "minSeverity", "type": "string", "enum": ["info", "warning", "critical"] },
      { "name": "cooldownMinutes", "type": "number" },
      { "name": "enabled", "type": "boolean" }
    ]},
    { "name": "get_alerts", "description": "Get recent alerts", "parameters": [
      { "name": "hours", "type": "number", "default": 24 }
    ]},
    { "name": "get_knowledge_stats", "description": "Get network knowledge stats", "parameters": [] },
    { "name": "get_known_devices", "description": "Get known devices", "parameters": [
      { "name": "filter", "type": "string", "enum": ["all", "known", "unknown"], "default": "all" }
    ]},
    { "name": "mark_device_known", "description": "Mark device as known", "parameters": [
      { "name": "macAddress", "type": "string", "required": true },
      { "name": "customName", "type": "string" },
      { "name": "deviceType", "type": "string", "enum": ["router", "switch", "ap", "computer", "phone", "tablet", "iot", "smart_home", "media", "gaming", "unknown"] },
      { "name": "notes", "type": "string" }
    ]},
    { "name": "get_network_history", "description": "Get network history", "parameters": [
      { "name": "limit", "type": "number", "default": 10 }
    ]},
    { "name": "export_knowledge", "description": "Export knowledge base", "parameters": [] },
    { "name": "check_router_tweaks", "description": "Check router tweaks against best practices", "parameters": [] },
    { "name": "apply_router_tweak", "description": "Apply router tweak", "parameters": [
      { "name": "tweakId", "type": "string", "required": true },
      { "name": "confirm", "type": "boolean", "required": true }
    ]},
    { "name": "get_recommended_scripts", "description": "Get recommended Merlin scripts", "parameters": [] },
    { "name": "set_house_config", "description": "Configure house layout for triangulation", "parameters": [
      { "name": "name", "type": "string", "required": true },
      { "name": "floors", "type": "array", "required": true },
      { "name": "hasGarden", "type": "boolean" },
      { "name": "constructionType", "type": "string", "enum": ["wood_frame", "concrete", "brick", "mixed"] }
    ]},
    { "name": "get_house_config", "description": "Get current house configuration", "parameters": [] },
    { "name": "triangulate_devices", "description": "Triangulate device positions", "parameters": [
      { "name": "deviceMac", "type": "string" }
    ]},
    { "name": "get_auto_map", "description": "Generate auto map without images", "parameters": [
      { "name": "floorNumber", "type": "number", "default": 0 }
    ]},
    { "name": "set_node_position_3d", "description": "Set 3D position of mesh node", "parameters": [
      { "name": "nodeMac", "type": "string", "required": true },
      { "name": "nodeId", "type": "string", "required": true },
      { "name": "floorNumber", "type": "number", "required": true },
      { "name": "floorType", "type": "string", "enum": ["basement", "ground", "first", "second", "third", "attic", "garden", "outdoor"], "required": true },
      { "name": "x", "type": "number", "required": true },
      { "name": "y", "type": "number", "required": true },
      { "name": "z", "type": "number" },
      { "name": "roomId", "type": "string" }
    ]},
    { "name": "record_signal_measurement", "description": "Record RSSI measurement", "parameters": [
      { "name": "deviceMac", "type": "string", "required": true },
      { "name": "nodeMac", "type": "string", "required": true },
      { "name": "rssi", "type": "number", "required": true }
    ]},
    { "name": "get_log_info", "description": "Get log file info and status", "parameters": [] },
    { "name": "get_metrics", "description": "Get skill performance metrics", "parameters": [] },
    { "name": "reset_circuit_breaker", "description": "Reset SSH circuit breaker", "parameters": [] }
  ],
  "metadata": {
    "openclaw": {
      "emoji": "ðŸ“¡",
      "os": ["darwin", "linux", "win32"],
      "requires": {
        "bins": ["ssh"],
        "env": ["ASUS_ROUTER_HOST", "ASUS_ROUTER_SSH_USER", "ASUS_ROUTER_SSH_PASSWORD"]
      },
      "primaryEnv": "ASUS_ROUTER_HOST",
      "install": [
        {
          "id": "npm",
          "kind": "node",
          "package": "openclaw-asus-mesh-skill",
          "label": "Install via npm"
        }
      ]
    }
  }
}
